{
  "manifest_version": 2,
  "name": "Follow On Mastodon",
  "version": "1.0",

  "description": "Follow Mastodon users from your preferred server.",
  "homepage_url": "https://github.com/duckinator/follow-on-mastodon",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Follow on Mastodon",
    "default_popup": "popup/follow.html"
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  }
}
