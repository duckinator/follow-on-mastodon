{
  "manifest_version": 3,
  "name": "Follow On Mastodon",
  "version": "2.0",

  "description": "Follow Mastodon users from your preferred server.",
  "homepage_url": "https://github.com/duckinator/follow-on-mastodon",

  "icons": {
    "48": "icons/mastodon-follow-48.png",
    "96": "icons/mastodon-follow-96.png"
  },

  "browser_specific_settings": {
      "gecko": {
          "id": "follow-on-mastodon@duckinator.net",
          "strict_min_version": "115.0"
      }
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "action": {
    "default_icon": "icons/mastodon-follow-32.png",
    "default_title": "Follow on Mastodon",
    "default_popup": "popup/follow.html"
  },

  "options_ui": {
    "page": "options/options.html"
  }
}
